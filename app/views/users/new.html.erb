<h1> NEW USER FORM </h1>
<% if @user.errors.any? %>
  <div id= "errors">
      <ul>
        <% @user.errors.full_messages.each do |e| %>
          <li> <%= e %> </li>
        <% end %>
      </ul>
  </div>
<% end %>
<%= form_with model: @user, local: true do |f| %>
  <%= f.label :first_name %>
  <%= f.text_field :first_name %> <br> <br>

  <%= f.label :last_name %>
  <%= f.text_field :last_name %> <br> <br>

  <%= f.label :username %>
  <%= f.text_field :username %> <br> <br>
  
  <%= f.label :email %>
  <%= f.text_field :email %> <br> <br>

  <%= f.label :password %>
  <%= f.password_field :password %> <br> <br>

  <%= f.submit %>
<% end %>
